{
    "name": "craft-ls",
    "displayName": "Craft-ls",
    "description": "Linting support for python files using `craft-ls`.",
    "version": "2022.0.0-dev",
    "preview": true,
    "serverInfo": {
        "name": "Craft-ls",
        "module": "craft-ls"
    },
    "publisher": "abatisse",
    "license": "MIT",
    "homepage": "https://github.com/<my-github>/<my-extension-project>",
    "repository": {
        "type": "git",
        "url": "https://github.com/<my-github>/<my-extension-project>.git"
    },
    "bugs": {
        "url": "https://github.com/<my-github>/<my-extension-project>/issues"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "keywords": [
        "python",
        "craft-ls"
    ],
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Programming Languages",
        "Linters",
        "Formatters"
    ],
    "extensionDependencies": [
        "ms-python.python"
    ],
    "capabilities": {
        "virtualWorkspaces": {
            "supported": false,
            "description": "Virtual Workspaces are not supported with Craft-ls."
        }
    },
    "activationEvents": [
        "onLanguage:yaml",
        "workspaceContains:*.yaml"
    ],
    "main": "./dist/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool source-map --config ./webpack.config.js",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "format-check": "prettier --check 'src/**/*.ts' 'build/**/*.yml' '.github/**/*.yml'",
        "test": "node ./out/test/runTest.js",
        "vsce-package": "vsce package -o craft-ls.vsix"
    },
    "contributes": {
        "configuration": {
            "properties": {
                "craft-ls.interpreter": {
                    "default": [],
                    "description": "When set to a path to python executable, extension will use that to launch the server and any subprocess.",
                    "scope": "resource",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "craft-ls.showNotifications": {
                    "default": "off",
                    "description": "Controls when notifications are shown by this extension.",
                    "enum": [
                        "off",
                        "onError",
                        "onWarning",
                        "always"
                    ],
                    "enumDescriptions": [
                        "All notifications are turned off, any errors or warning are still available in the logs.",
                        "Notifications are shown only in the case of an error.",
                        "Notifications are shown for errors and warnings.",
                        "Notifications are show for anything that the server chooses to show."
                    ],
                    "scope": "machine",
                    "type": "string"
                }
            }
        },
        "commands": [
            {
                "title": "Restart Server",
                "category": "Craft-ls",
                "command": "craft-ls.restart"
            }
        ]
    },
    "dependencies": {
        "@vscode/python-extension": "^1.0.5",
        "fs-extra": "^11.3.0",
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/vscode": "1.78.0",
        "@types/glob": "^8.1.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^8.20.0",
        "@typescript-eslint/parser": "^8.20.0",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.2.1",
        "eslint": "^9.18.0",
        "glob": "^11.0.1",
        "prettier": "^3.4.2",
        "typescript": "^5.7.3",
        "ts-loader": "^9.5.2",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1"
    }
}
